@model IEnumerable<Ecommerce.Models.Entity.Order>
@{
    ViewData["Title"] = "Cart";
}
<h2 class="text-center">User Orders Detail </h2>
<div style="width:80%;margin:auto" class="mt-2">
    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-striped">
            <tr>
                <th>OrderDate</th>
                <th>OrderStatus</th>
                
            </tr>
        @foreach(var order in Model)
        {
            <tr>
                <td>@order.CreateDate.ToString("dd-MM-yyyy")</td>
                <td>@order.OrderStatus.StatusName</td>
            </tr>
        @if (order.OrderDetails != null && order.OrderDetails.Count > 0)
        {
            <tr>
                <td>Total:</td>
                        <td>@(order.OrderDetails.Select(item => item.Book.Price * item.Quantity).Sum())</td>
            </tr>
                 <tr>
                <td>
                        <table class="table table-striped">
                            <tr>
                                <th>Book</th>
                                <th>Image</th>
                                <th>Genre</th>
                                <th>Unir Price(PKR)</th>
                                <th>Qty</th>
                                <th>Total Price</th>
                                <th>Action</th>
                            </tr>
                            @foreach (var item in order.OrderDetails)
                            {
                                <tr>
                                    <td>@item.Book.BookName</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(item.Book.Image))
                                        {
                                            <img src="/images/NoImage.png" style="width:80%; height:100px" />
                                        }
                                        else
                                        {
                                            <img src="/images/@item.Book.Image" style="width:80%;height:100px" />
                                        }
                                    </td>
                                    <td>@item.Book.Genre.GenreName</td>
                                    <td>@item.Book.Price X @item.Quantity</td>
                                    <td>@(item.Book.Price* item.Quantity)</td>
                                    <td>
                                        <a class="btn btn-info" href="/Cart/AddItem?bookId=@item.BookId&&redirect=1">+</a>
                                        <a class="btn btn-info" href="/Cart/removeitem?bookId=@item.BookId">-</a>
                                    </td>
                                </tr>
                            }
                        </table>
                </td>
            </tr>
            }
        }
        </table>
        
    }
    else
    {
        <h5>No Orders</h5>
    }
</div>
