@model IEnumerable<Ecommerce.Models.Entity.Order>
@{
    ViewData["Title"] = "All Orders";
}
<h2 class="text-center">Records of All Orders</h2>
<div style="width:100%" class="mt-2">
    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-striped">
            <tr>
                <th>OrderDate</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile No</th>
                <th>Address</th>
                <th>PaymentStatus</th>
                <th>OrderStatus</th>
                <th>Action</th>
            </tr>
            @foreach(var order in Model)
            {
                <tr>
                    <td>@order.CreateDate.ToString("dd-MM-yy")</td>
                    <td>@order.Name</td>
                    <td>@order.Email</td>
                    <td>@order.MobileNumber</td>
                    <td>@order.Address</td>
                    <td>@order.Payment | @(order.IsPaid ? "Paid" : "Not Paid")</td>
                    <td>@order.OrderStatus.StatusName</td>
                    <td>
                        <button type="button" data-bs-toggle="modal" data-bs-target="#modal-@order.Id" class="btn btn-primary">
                            Order Detail
                        </button>
                        <a asp-action="UpdatePaymentStatus" asp-route-orderId="@order.Id" class="btn btn-info">Change Order Status</a>
                        <a asp-action="TogglePaymentStatus" asp-route-orderId="@order.Id" class="btn btn-primary">Toggle Payment Status</a>

                        @await Html.PartialAsync("/Views/AdminOperation/_OrderDetail.cshtml",new OrderDetailModelDto{
                            DivId = order.Id.ToString(),
                            OrderDetail=order.OrderDetails
                        })
                    </td> 
                </tr>
            }
        </table>
    }
    else
    {
        <h5>No Orders</h5>
    }

</div>